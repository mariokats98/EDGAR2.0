generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  // Use YOUR storage_* vars exactly as provided by your provider
  url       = env("storage_DATABASE_URL")
  // Direct connection for Prisma (non-pooled). If your provider gave this:
  directUrl = env("storage_PRISMA_DATABASE_URL")
  // If they also provided a pooled “POSTGRES_URL”, you can ignore it for Prisma.
}

model User {
  id               String   @id @default(uuid())
  name             String?
  email            String?  @unique
  emailVerified    DateTime?
  image            String?
  password         String?
  role             Role     @default(USER)
  stripeCustomerId String?
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
}

enum Role {
  USER
  ADMIN
}